<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.com.wanyueliang.exoplayer.MainActivity">

    <cn.com.wanyueliang.exolibrary.ui.widget.VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x210"
        app:useDefaultControls="true"
        app:useTextureViewBacking="true">
    </cn.com.wanyueliang.exolibrary.ui.widget.VideoView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_play"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x100"
        android:text="@string/play"/>

</RelativeLayout>
